# ==========================================
# CONFIGURAÇÕES DO SUPABASE
# ==========================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==========================================
# CONFIGURAÇÕES STRIPE (Pagamentos)
# ==========================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# ==========================================
# CONFIGURAÇÕES DE IA
# ==========================================
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# ==========================================
# CONFIGURAÇÕES ZAPSIGN (Assinaturas Digitais)
# ==========================================
VITE_ZAPSIGN_API_KEY=your-zapsign-api-key-here
VITE_ZAPSIGN_BASE_URL=https://api.zapsign.com.br/api/v1
VITE_ZAPSIGN_SANDBOX_URL=https://sandbox.zapsign.com.br/api/v1

# ==========================================
# CONFIGURAÇÕES WHATSAPP (Sistema Próprio - Não Z-API)
# ==========================================
WHATSAPP_TOKEN=your-whatsapp-token-here
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id-here
WHATSAPP_VERIFY_TOKEN=your-verify-token-here
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhook/whatsapp

# ==========================================
# CONFIGURAÇÕES GOOGLE CALENDAR
# ==========================================
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id-here
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/auth/callback
GOOGLE_CALENDAR_API_KEY=your-google-api-key-here

# ==========================================
# CONFIGURAÇÕES REDIS (CACHE)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0
REDIS_TTL=3600

# ==========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ==========================================
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0

# ==========================================
# CONFIGURAÇÕES GERAIS
# ==========================================
NODE_ENV=development
APP_NAME=Jurify
APP_URL=http://localhost:3000
APP_VERSION=1.0.0
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt-BR

# ==========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ==========================================
ENCRYPTION_SECRET=your-256-bit-encryption-secret-here
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT=1800000
CSRF_SECRET=your-csrf-secret-here
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ==========================================
# CONFIGURAÇÕES DE EMAIL (SMTP)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
SMTP_FROM=noreply@jurify.com
SMTP_FROM_NAME=Jurify - Automação Jurídica

# ==========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/jurify
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# ==========================================
# CONFIGURAÇÕES DE LOGS
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==========================================
# CONFIGURAÇÕES DE BACKUP
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=jurify-backups
BACKUP_S3_REGION=us-east-1

# ==========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ==========================================
DEBUG=true
VERBOSE_LOGGING=false
ENABLE_CORS=true
ENABLE_SWAGGER=true
HOT_RELOAD=true
